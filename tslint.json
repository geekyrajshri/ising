{
  "extends": ["tslint:recommended"],
  "rules": {
    "max-line-length": [true, 80],
    "no-bitwise": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "one-line": false,
    "only-arrow-functions": false,
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "variable-name": ["check-format"]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  }
}
